<hr class="offset-top">
<div class="col-md-12">
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
</div>
<div class="container justify-content-center text-center">
  <div class="row justify-content-center text-center">
    <div class="col-xs-12 col-sm-12 col-md-12 justify-content-center text-center">
      <% if can? :manage, @user %>
        <div class="well well-sm">
          <div class="row justify-content-center text-center">
            <div class="col-sm-6 col-md-4 justify-content-center text-center">
              <img class="img-responsive" src="https://www.stevefarber.com/wp-content/uploads/2019/01/man-avatar-placeholder.png" alt="" class="img-rounded img-responsive" />
            </div>
            <div class="col-sm-6 col-md-8">
              <h4><%= @user.name %></h4>
              </i></small>
              <p>
                <i class="glyphicon glyphicon-envelope"></i><%= @user.email %>
                <br />
                <br>
                <i class="glyphicon glyphicon-gift"></i><%= t("orders.count_order", count_order: @user.orders.count) %>
              </p>
            </div>
          </div>
        </div>
      <% else %>
        <div class="well well-sm">
          <div class="row justify-content-center text-center">
            <div class="col-sm-6 col-md-4 justify-content-center text-center">
              <img class="img-responsive" src="https://www.stevefarber.com/wp-content/uploads/2019/01/man-avatar-placeholder.png" alt="" class="img-rounded img-responsive" />
            </div>
            <div class="col-sm-6 col-md-8">
              <p class="alert alert-info"><%= t("message.alert_view_profile") %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
